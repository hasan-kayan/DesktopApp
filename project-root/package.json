{
    "name": "electron-react-app",
    "version": "1.0.0",
    "description": "An Electron and React-based cross-platform desktop application",
    "main": "dist/main.bundle.js",  
    "scripts": {
      "start": "npm run build && electron .", 
      "build:main": "webpack --config webpack.main.config.js --mode production", 
      "build:renderer": "webpack --config webpack.renderer.config.js --mode production",  
      "build": "npm run build:main && npm run build:renderer",  
      "dev": "webpack serve --config webpack.renderer.config.js --mode development --open",  
      "pack": "electron-builder --dir",  
      "dist": "electron-builder",  
      "work": "rm -rf dist && npm run build && npm run start"  
    },
    "devDependencies": {
      "@babel/core": "^7.25.2",
      "@babel/preset-env": "^7.25.4",
      "@babel/preset-react": "^7.24.7",
      "babel-loader": "^9.1.3",
      "css-loader": "^7.1.2",
      "electron": "^32.1.0",
      "electron-builder": "^25.0.5",
      "html-webpack-plugin": "^5.6.0",
      "os-browserify": "^0.3.0",
      "path": "^0.12.7",
      "path-browserify": "^1.0.1",
      "stream-browserify": "^3.0.0",
      "style-loader": "^4.0.0",
      "util": "^0.12.5",
      "webpack": "^5.94.0",
      "webpack-cli": "^5.1.4",
      "webpack-dev-server": "^5.1.0",
      "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
      "@serialport/list": "^12.0.0",
      "axios": "^1.7.7",
      "chart.js": "^4.4.4",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-redux": "^9.1.2",
      "react-router-dom": "^6.26.2",
      "recharts": "^2.12.7",
      "redux": "^5.0.1"
    }
  }
  